<% @users.each do |user| %> 
    <div class="small-12 large-4 columns">
            <h3><%= user.name %></h3>
            <table class="expenses-table">
              <thead>
                <tr>
                  <th>Date</th>
                  <th>Title</th>
                  <th>Price</th>
                </tr>
              </thead>
              <tbody>
                <%= user.expenses.each do |expense| %>
                    <tr>
                      <td><%= expense.date %></td>
                      <td><%= expense.title %></td>
                      <td><%= expense.price %></td>
                        <% if expense.user == current_user %>
                            <td>edit</td>
                        <% end %>
                    </tr>
                <% end %>
                    <tr>
                        <td colspan="2">Total:</td>
                        <td><%= user.expenses.sum(:price) %></td>
                    </tr>
                <% if user == current_user %>
                    <tr>
                        <td colspan="3"><a class="new-expense-button"><b>+</b></a></td>
                    </tr>
                    <%= simple_form_for(@expense, html: {class: "myclass"}, defaults: { input_html: { class: 'default_class' }, label: false, wrapper: false }) do |f| %>     
                        <tr>
                            <%= f.hidden_field :user_id, collection: User.all, label_method: :name %>
                            <td><%= f.input :date, as: :string, input_html: { class: 'dpclass' } %></td>
                            <td><%= f.input :title %></td>
                            <td><%= f.input :price %></td>
                        </tr>
                        
                        <tr>
                           <td colspan="3"><%= f.button :submit, :class => "expense-submit-button" %></td>
                        </tr>
                    <% end %>
                <% end %>
              </tbody>
            </table>
    </div>
<% end %>

